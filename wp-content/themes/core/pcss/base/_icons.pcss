/* stylelint-disable */

@font-face {
  font-family: 'core-icons';
  src:
    url('var(--path-fonts)/icons-core/core-icons.woff2?pbrh5y') format('woff2'),
    url('var(--path-fonts)/icons-core/core-icons.ttf?pbrh5y') format('truetype'),
    url('var(--path-fonts)/icons-core/core-icons.woff?pbrh5y') format('woff'),
    url('var(--path-fonts)/icons-core/core-icons.svg?pbrh5y#core-icons') format('svg');
  font-weight: normal;
  font-style: normal;
}

.icon {
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family: 'core-icons' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

