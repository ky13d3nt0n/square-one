/* -----------------------------------------------------------------------------
 * Media: WP Audio & Video
 * ----------------------------------------------------------------------------- */

.wp-video-shortcode.mejs-container,
.wp-audio-shortcode.mejs-container {
	margin-top: var(--spacer-lg);
	margin-bottom: var(--spacer-lg);
	background: var(--wp-oembed-bgd);

	.mejs-controls {
		background: var(--wp-oembed-bgd);
	}

	.mejs-overlay-button {
		background-image: none;
	}
}
